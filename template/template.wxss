.list-btn {
  width: 80%;
  height: 80rpx;
  line-height: 80rpx;
  margin: 30rpx 10%;
  text-align: center;
  background-color: rgb(47,48,41);
  color: rgb(244,245,233);
  border-radius: 10rpx;
}
.list-btn-hover {
  background-color: rgb(77,78,71);
}
.component-info {
  width: 90%;
  padding: 5%;
  text-align: left;
  background-color: #2F3029;
  color: #F4F5E9;
  border-radius: 10rpx;
}
.info-explain{
  border-bottom: 5rpx dashed white;
  padding: 10rpx 0;
  font-size: 30rpx;
}
.info-para-title {
  font-size: 30rpx;
  padding: 10rpx 0;
}
.component-info .info-para-box .para-item {
  padding: 5rpx 0;
  overflow: hidden;
}
.component-info .info-para-box .para-item text {
   display: inline-block;
   width: 17%;
   padding: 0 1%;
   border-left: 1rpx solid white;
   font-size: 25rpx;
   margin-left: -1rpx;
}
.component-info .info-para-box .para-item text.para-remark {
  width: 40%;
}