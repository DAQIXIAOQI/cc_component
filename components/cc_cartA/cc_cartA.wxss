.container {
  width: 100%;
 
  position: relative;
}
.img-box {
  width: 100%;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: lightblue;
}
.img-box imgBox {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: 1;
}
.img-box text {
   background: lightcoral;
   display: inline-block;
   position: relative;
   z-index: 2;
}
.bt-text {
  overflow:hidden;
  width: 100%;
}

