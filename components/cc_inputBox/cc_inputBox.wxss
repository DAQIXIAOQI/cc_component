.input-container {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  margin: 50rpx 0 ;
  font-size: 33rpx;
}
.input-content text{
  width: 26%;
  text-align: right;
  float: left;
  display: inline-block;
  color: lightblue;
  padding: 0 2%;
  height: 100%;
  letter-spacing: 10rpx;
}
.input-content {
  height: 100%;
}
.input-content .input-box {
  width: 66%;
  margin-left:30%;
  border:1px solid gray;
  height: 100%;
  position: relative;
  overflow: hidden;
}
.input-content .input-box input,.input-content .input-box textarea {
  display: inline-block;
  height: 100%;
  padding: 0 5%;
 
  width: 75%;
   min-width: 75%;
}
.input-content .input-box icon {
  display: flex;
  height: 100%;
  align-items: center;
  justify-content: center;
  padding:0 2%;
  position: absolute;
  top: 0;
  right: 0;
  width: 10%;
  transition:all ease-in 0.1s;
   animation: rotate linear 2s infinite; 
  transform-origin: center;
}
.input-content .input-box icon.hide {
 padding-top: 100rpx;
 opacity: 0;
}
.input-notice {
  margin-left: 30%;
  font-size: 20rpx;
  color: red;
  line-height: 50rpx;
  height: 50rpx;
}

@keyframes rotate 
 {
100%  {transform: rotate(360deg)}
}
